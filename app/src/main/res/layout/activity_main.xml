<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010723"
    android:orientation="vertical"
    android:padding="8pt"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:padding="0pt"
        android:paddingBottom="0pt"
        android:text="_MiNi_CaLcuLaToR_"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/cal_screen"
        android:layout_width="wrap_content"
        android:layout_height="141dp"
        android:background="#59800B"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="30pt"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_AC"
            android:layout_width="70pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="#F15252"
            android:onClick="WASHOUT"
            android:text="AC"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_mod"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="#94A1E6"
            android:onClick="OprtrInpt"
            android:text="%"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_div"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="#94A1E6"
            android:onClick="OprtrInpt"
            android:text="/"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt">
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn9"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:text="9"
                android:onClick="NmbrInpt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="NmbrInpt"
                android:background="@android:color/darker_gray"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@android:color/darker_gray"
                android:text="7"
                android:onClick="NmbrInpt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#94A1E6"
                android:onClick="OprtrInpt"
                android:text="x"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">>

            <Button
                android:id="@+id/btn6"
                android:onClick="NmbrInpt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@android:color/darker_gray"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="NmbrInpt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@android:color/darker_gray"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn4"
                android:onClick="NmbrInpt"
                android:layout_width="30pt"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#94A1E6"
                android:onClick="OprtrInpt"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">>

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="NmbrInpt"
                android:background="@android:color/darker_gray"
                android:text="3"
                android:layout_marginRight="1pt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn2"
                android:onClick="NmbrInpt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@android:color/darker_gray"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="NmbrInpt"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#94A1E6"
                android:onClick="OprtrInpt"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/btn0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:onClick="NmbrInpt"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/neg"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:onClick="NmbrInpt"
                android:text="-ve"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:onClick="NmbrInpt"
                android:text="."

                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#94A1E6"
                android:onClick="justSHOOT"
                android:text="="
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

</LinearLayout>